<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.DebugDrawer.Settings.Row" parent="Widget.DebugDrawer.Base.RowWidget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.DebugDrawer.Settings.Icon" parent="None">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:tint">?android:textColorSecondary</item>
        <item name="android:tintMode" tools:targetApi="lollipop">src_in</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="Widget.DebugDrawer.Settings.Text" parent="Widget.DebugDrawer.Base.RowTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:tint">?android:textColorSecondary</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

</resources>