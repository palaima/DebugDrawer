<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout android:id="@+id/dd_drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
    <!--
        the clickable here should fix the hanging which occurs sometimes
        http://stackoverflow.com/questions/18044277/android-navigation-drawer-bug-using-the-sample
        -->
    <io.palaima.debugdrawer.view.ScrimInsetsFrameLayout
        android:id="@+id/dd_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        />

    <include layout="@layout/dd_debug_drawer_slider" />
</android.support.v4.widget.DrawerLayout>